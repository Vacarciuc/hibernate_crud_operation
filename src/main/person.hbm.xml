<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="main.Person" table="persons">

        <meta attribute="class-description">
            This class contains the person details
        </meta>

        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>

        <property name="prenumele" column="prenumele" type="string"/>
        <property name="varsta" column="varsta" type="int"/>
        <property name="adresa" column="adresa" type="string"/>
        <property name="salariu" column="salariu" type="double"/>

    </class>
</hibernate-mapping>